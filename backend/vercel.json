{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    { "src": "/api/search", "dest": "/api/search.ts" },
    { "src": "/api/schema", "dest": "/api/schema.ts" },
    { "src": "/api/cache", "dest": "/api/cache.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
